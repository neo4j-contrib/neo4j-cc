{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@c-c/data-access-discourse": ["libs/data-access/discourse/src/index.ts"],
      "@c-c/data-access-neo4": ["libs/data-access/discourse/src/index.ts"],
      "@neo4j-cc/data-access-neo4j": ["libs/data-access/neo4j/src/index.ts"],
      "@neo4j-cc/data-access/hooks": ["libs/data-access/hooks/src/index.ts"],
      "@neo4j-cc/data-access/person": ["libs/data-access/person/src/index.ts"],
      "@neo4j-cc/feature/ninja-leaderboard": [
        "libs/feature/ninja-leaderboard/src/index.ts"
      ],
      "@neo4j-cc/feature/person": ["libs/feature/person/src/index.ts"],
      "@neo4j-cc/feature/release-notes": [
        "libs/feature/release-notes/src/index.ts"
      ],
      "@neo4j-cc/feature/twin4j": ["libs/feature/twin4j/src/index.ts"],
      "@neo4j-cc/model": ["libs/model/src/index.ts"],
      "@neo4j-cc/nest/neo4j-dbms": ["libs/nest/neo4j-dbms/src/index.ts"],
      "@neo4j-cc/ui": ["libs/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

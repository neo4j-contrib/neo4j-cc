{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook",
    "build:tailwind": "postcss src/global.css -o dist/cc-components.css"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },  
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "name": "cc-components",
  "author": "Andreas Kollegger",
  "module": "dist/cc-components.esm.js",
  "size-limit": [
    {
      "path": "dist/cc-components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/cc-components.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@size-limit/preset-small-lib": "^4.10.1",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@tailwindcss/postcss7-compat": "^2.0.3",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.2.2",
    "faker": "^5.4.0",
    "husky": "^5.1.3",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^7.0.35",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rollup-plugin-postcss": "^4.0.0",
    "sass-loader": "^11.0.1",
    "schema-dts": "^0.8.2",
    "size-limit": "^4.10.1",
    "storybook-dark-mode": "^1.0.7",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@fontsource/cormorant-garamond": "^4.2.2",
    "@fontsource/fira-code": "^4.2.2",
    "@fontsource/open-sans": "^4.2.2",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.4.0",
    "@xstate/react": "^1.3.1",
    "formik": "^2.2.6",
    "fp-ts": "^2.9.5",
    "postcss-cli": "^8.3.1",
    "react-router-dom": "^5.2.0",
    "react-table": "^7.6.3",
    "urql": "^2.0.1",
    "xstate": "^4.16.2",
    "yup": "^0.32.9"
  }
}
